<p id="notice"><%= notice %></p>
<div class="card row food-item-detail">
  <div class="col-md-6">
    <img class="card-img-top" src="<%= @food_item.image_url %>" alt="<%= @food_item.name %>">
  </div>
  <div class="card-block col-md-6">
    <h4 class="card-title"><%= @food_item.name %></h4>
    <p class="card-text"><%= @food_item.price %> VNƒê &nbsp;&nbsp;&nbsp; <%= @food_item.section.name %></p>
    <p class="card-text"><%= @food_item.description %></p>
    <a href="#" class="btn btn-primary">Order</a>
  </div>
</div>
<div class="card">
	<h4 class="card-title">Comments</h4>	
	<% @food_item.comments.each do |comment| %>
		<div class="card-block">
			<p><b><%= comment.name %>:</b> <%= comment.title %> | <i><%= comment.star %> star</i></p>
			<p class="card-text"><%= comment.content %></p>
		</div>
	<% end %>

	<div class="card-block">
		<%= form_for([@food_item, @food_item.comments.build]) do |f| %>
			<div class="form-group">
				<%= f.label :name %>
				<%= f.text_field :name, class: "form-control" %>
			  </div>
			  <div class="form-group">				
				<%= f.select :star, options_for_select([1, 2, 3, 4, 5]), class: "form-control" %>
				<%= f.label :star %>
			  </div>
			  <div class="form-group">
				<%= f.label :title %>
				<%= f.text_field :title, class: "form-control" %>
			  </div>
			  <div class="form-group">
				  <%= f.label :content %>
				  <%= f.text_area :content, class: "form-control" %>
			  </div>
			  <p>	
				<%= f.submit class:"btn btn-outline-primary btn-lg" %>
			  </p>
		<% end %>
	</div>
</div>
