<!DOCTYPE html>
<html>
  <head>
    <title>ReCoffee</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <body>
	<nav class="navbar navbar-light bg-faded">
  		<div class="container">
			<a class="navbar-brand" href="/">re.coffee</a>
			 <ul class="nav navbar-nav">
			 	<li class="nav-item <% if(current_page?('/'))%> active <% end %>">
			      <a class="nav-link" href="/">Home <span class="sr-only"></span></a>
			    </li>
			    <li class="nav-item <% if(current_page?('/menu'))%> active <% end %>">
			      <a class="nav-link" href="/menu">Menu</a>
			    </li>
			    <li class="nav-item <% if(current_page?('/contact'))%> active <% end %>">
			      <a class="nav-link" href="/contact">Contact</a>
			    </li>
			    <li class="nav-item <% if(current_page?('/orders'))%> active <% end %>">
			      <p class="cart-text"><%= render 'layouts/cart_text' %></p>
			    </li>
			    <%= form_tag(menu_path, :method => "get", id: "search-form", class: "form-inline pull-xs-right") do %>
					<%= text_field_tag :search, params[:search], class: "form-control", placeholder: "search something..." %>
					<%= submit_tag "Search", class: "btn btn-outline-success" %>
				 <% end %>				 
			 </ul>			 
		 </div>
	</nav>
	<div class="container">
		<div class="row wrapper">
			<%= yield %>
		</div>
	</div>
	<footer class="footer">
		<div class="container">
			<div class="footer-bar">
				2016@re.coffee
			</div>
		</div>
	</footer>
  </body>
</html>
